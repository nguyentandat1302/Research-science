@model IEnumerable<Research_science.Models.Job>

@{
    ViewBag.Title = "Applied";
    Layout = "~/Views/Shared/LayoutNavbar.cshtml";
}

<link href="~/Content/Item/Applied.css" rel="stylesheet">
<link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css'>
<script src='https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js'></script>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container">
    <h3>Applied Job</h3>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive project-list">
                        <table class="table project-table table-centered table-nowrap">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Job title</th>
                                    <th scope="col">Company</th>
                                    <th scope="col">Location</th>
                                    <th scope="col">Payment</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var job in Model)
                                {
                                    <tr>
                                        <td>@job.JobID</td>
                                        <td>@job.Title</td> 
                                        <td>@job.JobName</td> 
                                        <td>
                                            <span class="text-success font-12"><i class="mdi mdi-checkbox-blank-circle mr-1"></i>@job.Location.Country</span> 
                                        </td>
                                        <td>
                                            <p class="mb-0">@job.Budget<span class="float-right"></span></p> 
                                            <div class="progress mt-2" style="height: 5px;">
                                                <div class="progress-bar bg-success" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="action">
                                                <a href="#" class="text-success mr-4" data-toggle="tooltip" data-placement="top" title="Edit"> <i class="fa fa-pencil h5 m-0">@job.Accept</i></a>
                                                <a href="#" class="text-danger" data-toggle="tooltip" data-placement="top" title="Close"> <i class="fa fa-remove h5 m-0"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    <script>
        document.getElementById("createCVBtn").addEventListener("click", function() {
            window.location.href = '@Url.Action("Applied", "Job")';
        });
    </script>
