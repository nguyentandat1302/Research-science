@model Research_science.Models.Users    
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/LayoutNavbar.cshtml";
}
<style>
    /* Đặt kích thước chữ cho các phần tử trong phần form */
    form {
        font-size: 14px;
        /* Điều chỉnh kích thước chữ theo ý muốn */
    }

    /* Đặt kích thước chữ cho nhãn và input trong form */
    label, input {
        font-size: 10px; /* Điều chỉnh kích thước chữ theo ý muốn */
    }

    /* Đặt kích thước chữ cho các thông báo validation */
    .text-danger {
        font-size: 10px; /* Điều chỉnh kích thước chữ theo ý muốn */
    }

    /* Đặt kích thước chữ cho các phần tử khác trong form nếu cần */
    /*Thêm các quy tắc CSS khác nếu cần thiết*/
</style>


<div style="display: flex; justify-content: center; height: 120vh;top:30px;padding-bottom:100px">
    <form style="border: solid; border-width: 3px; border-radius: 10px; padding: 20px;" action="/User/Register" method="post">
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h2>Register As a job seeker</h2>
            <label for="exampleFormControlInput2" class="form-label">Account Email</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" aria-describedby="passwordHelpBlock" placeholder="Email" style="min-width:500px" name="Email">
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            <div class="mb-3">
                <label for="exampleFormControlInput2" class="form-label">FullName</label>
                <input type="text" class="form-control" id="exampleFormControlInput2" placeholder="FullName" style="min-width:500px" name="FullName">
                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput2" class="form-label">Address</label>
                <input type="text" class="form-control" id="exampleFormControlInput2" placeholder="Address" style="min-width:500px" name="Address">
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput2" class="form-label">Citizen Identification Card </label>
                <input type="text" class="form-control" id="exampleFormControlInput2" placeholder="CCCD" style="min-width:500px" name="Citizen identification card">
                @Html.ValidationMessageFor(model => model.CDCD, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput2" class="form-label">BirthDay </label>
                <input type="datetime" class="form-control" id="exampleFormControlInput2" placeholder="Happy birthday" style="min-width:500px" name="Enter happy birthday">
                @Html.ValidationMessageFor(model => model.BirthDay, "", new { @class = "text-danger" })
            </div>
            
            <label for="inputPassword5" class="form-label">Password</label>
            <input type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock" placeholder="Password" style="min-width:500px" name="Password">
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            <div id="passwordHelpBlock" class="form-text">
                Your password must be 8-30 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
            </div>
            @*<label for="inputPassword5" class="form-label">Confirm Password</label>
        <input type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock" placeholder="Confirm Password" style="min-width:500px" name="Password">
        @Html.ValidationMessageFor(model => model.MatKhauNL, "", new { @class = "text-danger" })*@

            <div style="padding-top: 20px; text-align: center;">
                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
            </div>
        </div>
    </form>
</div>