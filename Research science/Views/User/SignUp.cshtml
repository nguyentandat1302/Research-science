@model Research_science.Models.Users
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/LayoutNavbar.cshtml";
}

<style>
    form {
        font-size: 14px; /* Điều chỉnh kích thước chữ theo ý muốn */
    }
    label, input {
        font-size: 10px; /* Điều chỉnh kích thước chữ theo ý muốn */
    }
    .text-danger {
        font-size: 10px; 
    }
  
</style>


<div style="display: flex; justify-content: center; height: 157vh; top:30px; padding-bottom:100px">
    <form style="border: solid; border-width: 3px; border-radius: 10px; padding: 20px;" action="/User/SignUp" method="post">
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h2>Sign Up Company</h2>
            <label for="exampleFormControlInput1" class="form-label">USERNAME </label>
            <input type="text" class="form-control" id="exampleFormControlInput1" aria-describedby="passwordHelpBlock" placeholder="Username" style="min-width:500px" name="USERNAME">
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

            <label for="inputPassword5" class="form-label">PASSWORD</label>
            <input type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock" placeholder="Password" style="min-width:500px" name="PASSWORD">
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            <div id="passwordHelpBlock" class="form-text">
                Your password must be 8-30 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
            </div>


            <label for="inputPassword5" class="form-label">Confirm Password</label>
            <input type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock" placeholder="Confirm Password" style="min-width:500px" name="ConfirmPassword">
            @Html.ValidationMessageFor(model => model.ConfirmPass, "", new { @class = "text-danger" })


            <div class="mb-3">
                <label for="exampleFormControlInput2" class="form-label">FULLNAME COMPANY</label>
                <input type="text" class="form-control" id="exampleFormControlInput2" placeholder="FullName" style="min-width:500px" name="FullName">
                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="exampleFormControlInput3" class="form-label">EMAIL COMPANY</label>
                <input type="email" class="form-control" id="exampleFormControlInput3" placeholder="name@gmail.com" style="min-width:500px" name="EMAIL">
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="exampleFormControlInput4" class="form-label">ADDRESS COMPANY</label>
                <input type="text" class="form-control" id="exampleFormControlInput4" placeholder="Enter Address" style="min-width:500px" name="Address">
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="logoUpload" class="form-label">LOGO COMPANY</label>
                <input type="file" class="form-control" id="logoUpload" style="min-width:500px" name="LOGO" accept="image/*">
                @Html.ValidationMessageFor(model => model.LogoCompany, "", new { @class = "text-danger" })
            </div>


            <div class="mb-3">
                <label for="exampleFormControlInput6" class="form-label">PHONE COMPANY</label>
                <input type="number" class="form-control" id="exampleFormControlInput6" placeholder="Enter Phone Number" style="min-width:500px" name="Phone">
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="exampleFormControlInput7" class="form-label">BUSINESS COMPANY</label>
                <input type="text" class="form-control" id="exampleFormControlInput7" placeholder="Business Company" style="min-width:500px" name="Business">
                @Html.ValidationMessageFor(model => model.Business, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="exampleFormControlInput8" class="form-label">DESCRIPTION COMPANY</label>
                <input type="text" class="form-control" id="exampleFormControlInput8" placeholder="Description Company Yourself" style="min-width:500px" name="Description">
                @Html.ValidationMessageFor(model => model.Decsription, "", new { @class = "text-danger" })
            </div>

            <div style="padding-top: 20px; text-align: center;">
                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
            </div>
        </div>
    </form>
</div>

