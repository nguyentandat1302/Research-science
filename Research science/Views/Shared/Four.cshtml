        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#imageCarousel4" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#imageCarousel4" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <!-- Include Bootstrap's JavaScript files -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <style>
        /* Style for the left half black pane */
        .left-pane {
            position: absolute;
            top: 0;
            left: 0;
            width: 50%; /* Left half */
            height: 100%;
            background: linear-gradient(to right, rgba(0, 0, 0, 0.8), transparent);
        }

        /* Style for the content on the left half */
        .carousel-content-left {
            position: absolute;
            top: 50%;
            left: 10%;
            transform: translate(0, -50%);
            color: white;
            text-align: left;
        }

        /* Set a fixed height for the carousel inner */
        .carousel-inner-ok {
            height: 800px; /* Adjust as needed */
        }
    </style>
    <script>
        function prevSlide() {
            $('#imageCarousel4').carousel('prev');
        }

        function nextSlide() {
            $('#imageCarousel4').carousel('next');
        }

        // Pause auto-slide on mouseover
        $('#imageCarousel4').mouseover(function () {
            $(this).carousel('pause');
        });

        // Resume auto-slide on mouseout
        $('#imageCarousel4').mouseout(function () {
            $(this).carousel('cycle');
        });
    </script>
</div>
