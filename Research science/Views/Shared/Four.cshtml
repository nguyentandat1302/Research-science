                </div>
            </div>
            <div class="carousel-item">
                <div class="left-pane"></div>
                <!-- Image -->
                <img src="https://wallpapers.com/images/featured/most-beautiful-places-in-the-world-ixted75dnonldfh8.webp" class="d-block w-100" alt="Image 2">
                <!-- Content on the left half -->
                <div class="carousel-content-left">
                    <h2>Your Title</h2>
                    <p>Your description goes here.</p>
                    <a class="btn btn-info" href="@Url.Action("Stays","HomePage")">Learn More</a>
                </div>
            </div>
            <div class="carousel-item">
                <div class="left-pane"></div>
                <!-- Image -->
                <img src="https://images.pexels.com/photos/4974915/pexels-photo-4974915.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="d-block w-100" alt="Image 3">
